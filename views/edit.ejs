
    <%- include("partials/header.ejs") %>

    <div class="md:w-5xl w-full md:my-5 p-8 md:space-y-14 space-y-24 mx-auto  md:shadow-2xl md:shadow-blue-500 rounded-2xl">
        <h1 class="text-center font-bold text-4xl text-blue-600">Edit your Blog</h1>

    <form class="flex flex-col  space-y-5" action="/edit/<%= index %>" method="post">
        <label class="text-center font-bold text-2xl text-teal-600" for="title">Blog title</label>
        <input class="p-5 mb-10 md:w-[552px] w-[300px] mx-auto  border-2 border-amber-600 rounded-xl h-15" type="text" name="title" value="<%= posts.title %>">

        <label class="text-center font-bold text-2xl text-teal-600" for="content">Edit the content</label>
        <textarea class="p-5 border-2 border-amber-600 rounded-xl md:h-[270px] h-[500px] "  name="content" placeholder="content"><%= posts.content %></textarea>
        <button class="text-white h-10 w-40 mx-auto mt-16 md:mt-3 rounded-xl bg-green-600 hover:bg-green-700 cursor-pointer font-bold" type="submit">Save</button>
    </form>
    </div>
<%- include("partials/footer.ejs") %>